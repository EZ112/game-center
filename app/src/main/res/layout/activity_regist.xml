<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/userInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">
        <EditText
            android:id="@+id/nameIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:maxLines="1"
            android:textColorHint="@color/colorBlack50"
            android:textColor="@color/colorBlack"
            android:hint="Name"/>
        <EditText
            android:id="@+id/emailIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:maxLines="1"
            android:textColorHint="@color/colorBlack50"
            android:textColor="@color/colorBlack"
            android:hint="E-mail" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/userInfoAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">
        <EditText
            android:id="@+id/phoneIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:maxLines="1"
            android:textColorHint="@color/colorBlack50"
            android:textColor="@color/colorBlack"
            android:inputType="number"
            android:hint="Phone Number" />
        <EditText
            android:id="@+id/birthIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:maxLines="1"
            android:textColorHint="@color/colorBlack50"
            android:textColor="@color/colorBlack"
            android:hint="Birthday"
            android:clickable="true"
            android:focusable="false" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/userPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">
        <EditText
            android:id="@+id/passIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:maxLines="1"
            android:textColorHint="@color/colorBlack50"
            android:textColor="@color/colorBlack"
            android:inputType="textPassword"
            android:hint="Password"
            android:layout_below="@id/userInfoAdd"/>
        <EditText
            android:id="@+id/passConfIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:maxLines="1"
            android:textColorHint="@color/colorBlack50"
            android:textColor="@color/colorBlack"
            android:inputType="textPassword"
            android:hint="Password Confirm"
            android:layout_below="@id/passIn" />
    </LinearLayout>
    <RadioGroup
        android:id="@+id/genderIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/genderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Gender"/>
        <RadioButton
            android:id="@+id/rbMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"/>
        <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"/>
    </RadioGroup>
    <LinearLayout
        android:id="@+id/userInfoDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp">
        <TextView
            android:id="@+id/statusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Status"/>
        <Spinner
            android:id="@+id/statusIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>
    <TextView
        android:id="@+id/registBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:text="Register"
        android:layout_below="@id/statusIn"/>
</LinearLayout>